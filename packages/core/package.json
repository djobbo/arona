{
	"name": "@arona/core",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"private": true,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		}
	},
	"bin": {
		"arona": "./dist/cli.js"
	},
	"scripts": {
		"build": "tsup --entry.index src/index.ts --format esm,cjs --dts",
		"build:cli": "tsup --entry.cli src/cli/index.ts --format esm",
		"dev": "tsup --entry.index src/index.ts --entry.cli src/cli/index.ts --format esm,cjs --dts --watch",
		"lint": "biome check --write",
		"check:lint": "biome check",
		"check:types": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "latest",
		"@types/react": "18.3.0",
		"@types/react-reconciler": "0.28.8",
		"@types/uuid": "^10.0.0",
		"@types/webpack-node-externals": "^3.0.4",
		"react-refresh": "^0.17.0",
		"tsup": "^8.5.0"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@rspack/core": "^1.3.10",
		"@rspack/plugin-react-refresh": "^1.4.3",
		"dotenv": "^16.5.0",
		"react": "18.3.0",
		"react-reconciler": "0.28.0",
		"ts-morph": "^25.0.1",
		"uuid": "^11.1.0",
		"webpack": "^5.99.8",
		"webpack-node-externals": "^3.0.0"
	}
}
