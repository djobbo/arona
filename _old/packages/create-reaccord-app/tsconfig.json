{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "outDir": "lib",
    "declaration": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
